{
  "name": "boilerplate-react-api-tw-routing",
  "type": "module",
  "version": "0.2.3",
  "description": "A react starter",
  "repository": "https://github.com/dev-academy-challenges/boilerplate-react-webpack.git",
  "author": "Dev Academy Aotearoa",
  "license": "ISC",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "npm-run-all -p dev:server dev:client",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",
    "build": "run-s build:client build:server",
    "build:client": "vite build",
    "build:server": "esbuild --packages=external --platform=node --format=esm --outfile=dist/server.js --bundle server/index.ts",
    "test": "vitest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'",
    "knex": "knex --knexfile knexfile.js",
    "db:migrate": "npm run knex -- migrate:latest",
    "db:rollback": "npm run knex -- migrate:rollback",
    "db:seed": "npm run knex -- seed:run"
  },
  "keywords": [
    "frontend"
  ],
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "knex": "^3.1.0",
    "lucide-react": "^0.542.0",
    "sqlite3": "^5.1.7",
    "superagent": "^10.2.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@devacademy/eslint-config": "^1.10.1",
    "@tanstack/eslint-plugin-query": "^5.12.2",
    "@tanstack/react-query": "^5.12.2",
    "@tanstack/react-query-devtools": "^5.13.3",
    "@testing-library/react": "^14.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.23",
    "@types/node": "^18.19.123",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/superagent": "^8.1.1",
    "@types/supertest": "^6.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "esbuild": "^0.18.19",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "react": "^18.0.2",
    "react-dom": "^18.2.0",
    "react-router": "^7.7.0",
    "supertest": "^6.3.4",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^3.14.0",
    "typescript": "^5.9.2",
    "vite": "^5.0.0",
    "vitest": "^1.2.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  },
  "browserslist": "> 2%, not dead"
}
