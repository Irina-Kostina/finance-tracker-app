{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES2022", 
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler", 
    "noEmit": true,
    "isolatedModules": true, 
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "skipLibCheck": true,
    "baseUrl": "."
  },
  "include": ["server/**/*.ts", "client/**/*.ts", "client/**/*.tsx"]
}